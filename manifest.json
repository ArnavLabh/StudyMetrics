    ],
    "screenshots": [
      {
        "src": "/screenshots/login.png",
        "sizes": "1080x1920",
        "type": "image/png",
        "label": "Login Screen"
      },
      {
        "src": "/screenshots/dashboard.png",
        "sizes": "1080x1920",
        "type": "image/png",
        "label": "CGPA Dashboard"
      },
      {
        "src": "/screenshots/analytics.png",
        "sizes": "1080x1920",
